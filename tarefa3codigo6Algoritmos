// Henrique Mangueira
#include <stdio.h>

void somarValores(int vetor[], int tamanho, int *soma, float *media) {
* soma = 0;
for (int i = 0; i < tamanho; i++) {
* soma += vetor [i];
}
*media = (float) (*soma) / tamanho;

}

int main () {
int tamanho = 5; 
int vetor [tamanho];
int soma;
float media;


printf( "Digite %d valores: \n", tamanho);
for (int i = 0; i < tamanho; i++) {
scanf ("%d", &vetor [i]);
}
somarValores (vetor, tamanho, &soma, &media);
printf ("Soma: %d\n", soma); 
printf ("MÃ©dia: %.2f\n", media);
return 0;
}


