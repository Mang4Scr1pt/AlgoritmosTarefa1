#include <stdio.h>

int somaVetor(int vetor[], int tamanho);

int main() {
    int numeros[3];
    int resultado;

    for (int i = 0; i < 3; i++) {
        printf("Digite o %d° número inteiro: ", i + 1);
        scanf("%d", &numeros[i]);
    }

    resultado = somaVetor(numeros, 3);

    printf("A soma dos valores do vetor é: %d\n", resultado);

    return 0;
}

int somaVetor(int vetor[], int tamanho) {
    int soma = 0;
    for (int i = 0; i < tamanho; i++) {
        soma += vetor[i];
    }
    return soma;
}


